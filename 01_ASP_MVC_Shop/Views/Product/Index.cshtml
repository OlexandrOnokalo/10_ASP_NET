@using _01_ASP_MVC_Shop.Models
@model IEnumerable<ProductModel>

<div class="text-center">
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Brand</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Category</th>
                <th>Created</th>
                <th>Image</th>
                <th>
                    <a asp-action="Create" asp-controller="Product" style="color: white">
                        <i class="bi bi-plus-circle-dotted"></i>
                    </a>
                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Color</td>
                    <td>@product.Amount</td>
                    <td>@product.Price</td>
                    <td>@product.Category!.Name</td>
                    <td>@product.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @* ~  шлях до папки wwwroot *@
                        <img height="50" class="image-scale" src="~/images/@(product.Image ?? "default.jpg")" alt="@product.Name">
                    </td>
                    <td>
                        <a asp-controller="Product" style="margin-right: 10px" asp-action="Update" asp-route-id="@product.Id">
                            <i class="bi bi-pencil-square" style="color: blue"></i>
                        </a>

                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">
                            <i class="bi bi-trash-fill" style="color: red"></i>
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>