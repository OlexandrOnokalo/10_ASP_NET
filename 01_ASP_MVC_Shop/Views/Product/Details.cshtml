@model ProductModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <img class="card-img-top" src="~/images/@(Model.Image ?? "default.jpg")" alt="@Model.Name" style="object-fit:contain; height:420px;">
            </div>
        </div>

        <div class="col-md-6">
            <h2>@Model.Name</h2>

            @if (Model.Amount == 0)
            {
                <h4 class="text-muted">Немає в наявності</h4>
            }
            else
            {
                <h3 class="text-danger">@String.Format("{0:N0} ₴", Model.Price)</h3>
            }

            <p class="mt-3">@Model.Description</p>

            <ul class="list-unstyled mt-3">
                <li><strong>Категорія:</strong> @(Model.Category?.Name ?? "-")</li>
                <li><strong>Колір:</strong> @(Model.Color ?? "-")</li>
                <li><strong>Кількість:</strong> @Model.Amount</li>
                <li><strong>Дата додання:</strong> @Model.CreatedDate.ToLocalTime().ToString("g")</li>
            </ul>

            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary me-2">Назад</a>

            </div>
        </div>
    </div>
</div>
